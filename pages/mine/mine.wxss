/* pages/mine/mine.wxss */
page {
    background-color: #F7F8FC;

}

.mine{
    position: relative;
    height: 100%;
}
.head-img{
    width: 100%;
    top: 0;
    left: 0;
    position: absolute;
    z-index: -1;
}
.user {
    position: relative;
    display: flex;
    align-items: center;
    padding-bottom: 64rpx;
}

.avatarBox {
    width: 96rpx;
    height: 96rpx;
    position: relative;
    margin-left: 44rpx;
    flex-shrink: 0;
    margin-right: 20rpx;
}

.avatarBox .avatar {
    border-radius: 50%;
    width: 100%;
    height: 100%;
    position: absolute;
    border: 4rpx solid #FFBA20;
}
.name-box{
    position: relative;
    display: flex;
    flex-direction: column;

}
.name-user {
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    color: #262626;
    font-weight: bold;
}

.name-tag {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #8392A0;
    margin-top: 8rpx;
}
.price{
    position: absolute;
    right: 0;
    top: 0;
    margin:auto;
    height: 96rpx;
    padding-left: 18rpx;
    padding-right: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: #FFBA20;
    border-radius: 50rpx 0 0 50rpx;
}
.price .wallet{
    width: 56rpx;
    height: 56rpx;
    position: relative;
    margin-right: 10rpx;
    background-color: rgba(255,0,0,0.3)
}
.price .wallet .icon{
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin:auto;
    width: 40rpx;
    height: 40rpx;
}
.price .mm{
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;

}
.price .mm .top{
    margin-top: 6rpx;
    font-size: 20rpx;
    font-family: PingFangSC-Regular;
    color: #FFFFFF;
}
.price .mm .bottom{
    margin-bottom: 4rpx;
}
.price .mm .bottom .value{
    font-family: DINAlternate-Bold;
    font-weight: bold;
    font-size: 50rpx;
    color: #FFFFFF;
}
.price .mm .bottom .unit{
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    color: #FFFFFF;
}

.tabs {
    position: relative;
    border-top: 1px solid #e6e6e6;
    background: #FFFFFF;
    box-shadow: 0 1px 0 0 rgba(0,0,0,0.03);
    border-radius: 8px 8px 0 0;
    width: 100vw;
    height: 44px;
    display: flex;
    justify-content: space-around;
    z-index: 1;
    border-bottom: 1px solid #e6e6e6;
}
.tabs.tabs-sticky{
    position: sticky;
}
.tabs .item {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #8392A0;
    text-align: center;
    box-sizing: border-box;
    height: 44px;
    line-height: 44px;
 
}

.tabs .item.sel {
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: #4F4F4F;
    font-weight: 500;
    position: relative;
}

.tabs .item.sel::after {
    content: "";
    background: linear-gradient(90deg, #4F4F4F, #4F4F4F);
    border-radius: 4rpx;
    width: 40rpx;
    height: 4rpx;
    left: 0;
    right: 0;
    bottom: 0px;
    position: absolute;
    margin: auto;
}
.demand-second-level{
    height: 44px;
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    z-index: 1;
    background-color: #ffffff;
    padding-left: 40rpx;
    box-shadow: 0 1px 0 0 rgba(0,0,0,0.03);
}

.demand-second-level.sticky{
    position: sticky;
}
.demand-second-level .level{
    padding: 0 34rpx;
    margin-right: 20rpx;
    height: 56rpx;
    line-height: 56rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #8392A0;
}
.demand-second-level .level.sel{
    background: #EEF5FD;
    border-radius: 34rpx;
    font-family: PingFangSC-Medium;
    font-size: 24rpx;
    color: #6F96BA;

}
.demand-order-list{
    position: relative;
    background-color: white;
    box-shadow: 0 2px 8px 0 rgba(36, 19, 72, 0.04);
    margin:20rpx;
    padding: 20rpx;
    border-radius: 10rpx;
}
.demand-order-list .status{
    position: absolute;
    right: 40rpx;
    top: 0;
    bottom: 0;
    margin:auto;
    font-size: 30rpx;
    height: 20rpx;
    color: tomato;
    
}
.demand-order-list .title{
    margin-top:20rpx;
    margin-left: 20rpx;
}
.demand-order-list .title .tag{
    display: inline-block;
    background-color: #7D7D7D;
    font-size: 26rpx;
    color: white;
    text-align: center;
    padding:8rpx 20rpx;
    border-radius: 5rpx;
}
.demand-order-list .title .name{
    margin-left: 20rpx;
    display: inline-block;
    font-weight: bold;
    font-size: 32rpx;
}
.demand-order-list .item{
    margin-left: 10rpx;
    margin-top:20rpx;
    font-size: 30rpx;
}
.demand-order-list .item .key{
    margin-left: 20rpx;
}
.demand-order-list .user-mobile{
    border-top: 1px solid #E6E6E6;
    margin:20rpx;
    margin-bottom: 0;
    padding:20rpx;
    padding-left: 0;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}
.demand-order-list .user-mobile .head{
    height: 60rpx;
    width: 60rpx;
}
.demand-order-list .user-mobile .mobile{
    margin:0 20rpx;
}
.demand-order-list .user-mobile .call{
    height: 30rpx;
    width: 30rpx;
}
.order-container{
    position: relative;
}
.order-container .no-data{
    margin-top:200rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.order-container .no-data .icon{
    width: 150rpx;
    height: 150rpx;
}
.order-container .no-data .desc{
    width: 420rpx;
    margin-top:30rpx ;
    font-size: 30rpx;
    color: #7D7D7D;
}
.order-list .dropdown-menu{
    position: relative;
}
.dropdown-menu{
    position: relative;
    border-bottom: 1px solid #E6E6E6;
}
.dropdown-menu.sticky{
    position: sticky;
    z-index: 1;
}
.dropdown-menu .menu{
    position: relative;
    z-index: 999;
    background-color: white;
    position: relative;
    height: 44px;
    line-height: 44px;
    padding-left: 40rpx;
    display: flex;
    flex-direction: row;
    justify-content:flex-start;
}
.dropdown-menu .menu .menu-item{
    width: 160rpx;
    height: 44rpx;
    line-height: 44px;
    margin-right: 20rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;

}
.dropdown-menu .menu .menu-item .name{
    height: 44rpx;
    line-height: 44rpx;
}
.dropdown-menu .menu .menu-item .icon{
    vertical-align: middle;
    margin-top: -4rpx;
    width: 20rpx;
    height: 20rpx;
}

.dropdown-menu .shade-cell {
    background-color: rgba(0, 0, 0, 0.5);
    top: 44px;
    left: 0;
    right: 0;
    height: 1000px;
    bottom: 0;
    position: absolute;
    z-index: 2;
}
 .shade-cell .shade-cell-main {
    background-color: white;
    border-radius: 0 0 10px 10px;
    width: 100%;
    top: 0;
    position: absolute;
    animation: main-shows 0.25s forwards;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    padding-bottom: 40rpx;
}

@keyframes main-shows {
    0% {
        transform: translateY(-20%);
        opacity: 0;
    }
    100% {
        transform: translateY(0);
        opacity: 1;
    }
}
.shade-cell-main .shade-item-option{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 24rpx;
    padding-left: 40rpx;
    padding-right: 40rpx;
    height: 96rpx;
    line-height: 96rpx;
    box-shadow: 0 1px 0 0 #E6E6E6;
}
.shade-cell-main .shade-item-option .sel{
    color: #FFBA20;
}
.shade-cell-main .shade-item-option .checked{
    width: 30rpx;
    height: 30rpx;
}

.product-list{
    position: relative;
    /* background-color: white;
    box-shadow: 0 2px 8px 0 rgba(36, 19, 72, 0.04); */
    margin:20rpx;
    padding: 20rpx;
    border-radius: 10rpx;
    display: flex;
    flex-direction: row;
    border-bottom: 1px solid #e6e6e6;
}
.product-list .photo{
    width: 300rpx;
    height: 200rpx;
    border-radius: 10rpx;
}
.product-list .p-u{
    margin-left: 20rpx;
    position: relative;
    display: flex;
    flex-direction: column;
}
.product-list .p-u .title{
    font-size: 36rpx;
    font-weight: 500;
}
.mark-type{
    max-width: 300rpx;
    margin: 20rpx;
    margin-left:0;
}
.mark-type .menu{
    position: relative;
    white-space: nowrap;
    height: 50rpx;

}
.mark-type .menu .item{
    height: 50rpx;
    background-color: #707070;
    border-radius: 5px;
    box-shadow: 0 2px 8px 0 rgba(36, 19, 72, 0.04);
    display: inline-flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    margin: 0 10rpx;
    padding:0 10rpx;
}
.mark-type .menu .item .name{
    font-size: 24rpx;
    color: white;
}
.p-u-price{
    color: tomato;
}
.p-u-price .unit{
    font-size: 28rpx;
} 
 .p-u-price .value{
    font-size: 40rpx;
} 