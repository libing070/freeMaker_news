<!--pages/home/home.wxml-->
<view class="home" style="padding-bottom:{{ 50 + safeBottom }}px">
    <view class="menu-box">
        <scroll-view class="menu" scroll-x="true">
            <view class="item" wx:for="{{10}}" wx:key="index" data-id="{{index}}" catchtap="tapTohomeList">
                <image class="icon" src="/images/common/715_2.jpg"></image>
                <view class="name">{{index+1}}</view>
            </view>
        </scroll-view>  
    </view>

    <view class="recommend-navbar" style="margin-top:64rpx;margin-bottom:40rpx">
        <view class="left">专辑推荐</view>
        <view class="right"  catchtap="tapTohomeList">
            <text class="more">see all</text>
            <image class="triangle" src="/images/common/icon-triangle2.png"></image> 
        </view>
    </view>

   <view class="album-box">
        <scroll-view class="swiperBox" scroll-x>
            <block wx:for="{{10}}" wx:key="index">
                <view class="itemBox">
                    <image  class="photoBox" src="/images/common/715_2.jpg" mode="aspectFill"></image>
                    <view class="name">
                        <view class="cn-name">流程设计</view>
                        <view class="en-name">Process Design</view>
                    </view>
                </view>
            </block>
        </scroll-view>
   </view>

    <view class="recommend-navbar" style="margin-top:82rpx;margin-bottom:24rpx">
        <view class="left">为你推荐</view>
        <view class="right"  catchtap="tapTohomeList">
            <text class="more">see all</text>
            <image class="triangle" src="/images/common/icon-triangle2.png"></image> 
        </view>
    </view>


    <view class="group">
        <home-cell wx:for="{{list}}" wx:key="index" obj="{{item}}" bindchangeName="changeName"></home-cell>
    </view>

</view>

<custom-tabbar active-index="0"></custom-tabbar>
