/* pages/product/product.wxss */
page {
    background-color: #F7F8FC;
}
.product{
    position: relative;
    background-color: white;
}
.input-wrapper{
    position: relative;
}
.input-wrapper .input{
    height: 112rpx;
    line-height: 112rpx;
    margin:0 40rpx;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #0C2032;
    border-bottom: 0.1px solid #E6E6E6;
}

.input-wrapper .editor{
    padding: 40rpx;
    height: 440rpx;
    opacity: 0.8;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #0C2032;
}
.input-wrapper .number{
    position: absolute;
    bottom: 0rpx;
    right: 40rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #8392A0;
}
.images-box{
    border-bottom: 0.1px solid #E6E6E6;
    display: flex;
    flex-direction: row;
    flex-wrap:wrap;
    justify-content: flex-start;
    margin:40rpx;
}
.images-box .box{
    position: relative;
    margin-bottom: 16rpx;
    margin-right: 15rpx;
    width: 208rpx;
    height: 156rpx;
    border-radius: 8rpx;
}
.icon-delete{
    position: absolute;
    right: -10rpx;
    top: -10rpx;
    width: 36rpx;
    height: 36rpx;
    z-index: 2;

}
.images-box .box .cover{
    position: absolute;
    height: 40rpx;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    background: rgba(0,0,0,0.5);
    font-family: PingFangSC-Regular;
    font-size: 20rpx;
    line-height: 40rpx;
    text-align: center;
    color: #FFFFFF;
    border-bottom-left-radius: 8rpx;
    border-bottom-right-radius: 8rpx;

}
.images-box .box .img{
    width: 208rpx;
    height: 156rpx;
    border-radius: 8rpx;

}
.images-box .box.dotted-box .upload-text{
    position: absolute;
    left: 0;
    right: 0;
    bottom: 20rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #829FBB;
    text-align: center;

}
.images-box .box.dotted-box{
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 28rpx;
    color: #C8C8C8;
}
.images-box .box.dotted-box .upload-icon{
    width: 208rpx;
    height: 156rpx;
}


.content-wrapper{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin:0 40rpx;
    height: 120rpx;
}
.content-wrapper .names{
    height: 120rpx;
    line-height: 120rpx;
    font-size: 32rpx;
    color: #0C2032;
    position: relative;
}
.content-wrapper .names .icon-important{
    position: absolute;
    top: 0;
    bottom: 0;
    margin:auto;
    width:30rpx;
    height:30rpx;
}
.content-wrapper .names .t{
    margin-left:35rpx;
}

.content-wrapper .choose-val{
    height: 120rpx;
    line-height: 120rpx;
    font-size: 28rpx;
    color: #0C2032;
}
.content-wrapper .choose-val .arrow{
    width: 18rpx;
    height: 18rpx;
    vertical-align: middle;
    margin-top: -5rpx;
    padding-left: 20rpx;
}
.content-wrapper .stepper{
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}
.content-wrapper .stepper .icon{
    width: 32rpx;
    height: 32rpx;
}
.content-wrapper .stepper .value{
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #3D4347;
    margin:0 8rpx;
}

.mark-type{
    margin-left: 40rpx;
    margin-bottom: 40rpx;
}
.mark-type .menu{
    position: relative;
    white-space: nowrap;
    height: 56rpx;
}
.mark-type .menu .item{
    height: 56rpx;
    box-shadow: 0 2px 8px 0 rgba(36, 19, 72, 0.04);
    display: inline-flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    margin: 0 16rpx;
    background: #EBF5FF;
    border-radius: 8px;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    padding: 0 28rpx;
    color: #7797B5;
}
.mark-type .menu .item:nth-child(1){
    margin-left:0
}

.mark-type .menu .item .name{
    font-size: 24rpx;
}
.mark-type .menu .item.yellow{

    background: #FFBA20;
}
.mark-type .menu .item.yellow .name{
    color: #FFFFFF;
}


.input-budget{
    margin:0 40rpx;
    height: 120rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-top: 0.1px solid #E6E6E6;
    border-bottom: 0.1px solid #E6E6E6;
}
.input-budget .names{
    position: relative;
    height: 120rpx;
    line-height: 120rpx;
    font-size: 32rpx;
    color: #0C2032;
}
.input-budget .names .icon-important{
    position: absolute;
    top: 0;
    bottom: 0;
    margin:auto;
    width:30rpx;
    height:30rpx;
}
.input-budget .names .t{
    margin-left:35rpx;
}
.input-budget  .input {
    flex-shrink:0;
    height: 120rpx;
    line-height: 120rpx;
    text-align: right;
    font-family: DINAlternate-Bold;
    font-size: 40rpx;
    color: rgba(131,146,160,0.5);
    text-indent: 1;
}
.input-budget  .unit {
    height: 120rpx;
    line-height: 120rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #0C2032;
}
.shade {
    background-color: rgba(0, 0, 0, 0.5);
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    position: fixed;
}

.main {
    background-color: white;
    border-radius: 10px 10px 0 0;
    width: 100%;
    bottom: 0;
    position: absolute;
    animation: main-show 0.25s forwards;
}

@keyframes main-show {
    0% {
        transform: translateY(100%);
    }

    100% {
        transform: translateY(0);
    }
}

.tree-select-title{
    margin: 20rpx;
    font-size: 32rpx;
}
.tree-select-box{
    height: 600rpx;
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    margin-top:40rpx;
}
.tree-select-box .tree-select-nav{
    overflow-y: auto;
    flex-grow:1;
    text-align: center;
    border-right: 0.1px solid #E6E6E6;
    padding:20rpx;
}
.tree-select-box .tree-select-nav .item{
    padding:20rpx;
    border-radius: 10rpx;
}
.tree-select-box .tree-select-nav .item.sel{
    background-color: #7D7D7D;
}
.tree-select-box .tree-select-main{
    flex-grow:2;
    overflow-y: auto;
}
.tree-select-box .tree-select-main .item{
    padding:20rpx;
    margin:10rpx;
    margin-left: 20rpx;
    border-bottom: 0.1px solid #E6E6E6;
}
.tool-bar{
    position: fixed;
    bottom: 0;
    box-shadow: inset 0 1px 0 0 #F0F0F0;
    background-color: white;
    height: 112rpx;
    width: 100vw;
    left: 0;
    right: 0;
    margin:auto;
    display: flex;
    flex-direction: row;
}
.tool-bar .layout-1{
    height: 88rpx;
    line-height: 88rpx;
    background: #F4F4F4;
    border-radius: 8rpx;
    text-align: center;
    flex-grow: 1;
    margin:auto 40rpx;
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: rgba(12,32,50, 0.2);
    text-align: center;
}
.tool-bar .layout-1.ok{
    background:#FFBA20;
    color: #FFFFFF;
}