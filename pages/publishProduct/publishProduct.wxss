/* pages/product/product.wxss */
page {
    background-color: #F7F8FC;
}
.product{
    position: relative;
    background-color: white;
}
.input-wrapper{
    position: relative;
}
.input-wrapper .input{
    color: #7D7D7D;
    height: 120rpx;
    line-height: 120rpx;
    padding-left: 20rpx;
    font-size: 28rpx;
    border-bottom: 0.1px solid #E6E6E6;
}

.input-wrapper .editor{
    width: 100%;
    margin: 20rpx;
    font-size: 28rpx;
    height: 400rpx;
    display: block;
}
.input-wrapper .number{
    position: absolute;
    bottom: 20rpx;
    right: 20rpx;
    font-size: 28rpx;
    color: #C8C8C8;
}
.images-box{
    display: flex;
    flex-direction: row;
    flex-wrap:wrap;
    justify-content: flex-start;
    margin:0 20rpx;
}
.images-box .box{
    position: relative;
    margin:20rpx;
    width: 135rpx;
    height: 135rpx;
}
.icon-delete{
    position: absolute;
    right: -20rpx;
    top: -20rpx;
    width: 40rpx;
    height: 40rpx;
    z-index: 2;

}
.images-box .box .img{
    width: 135rpx;
    height: 135rpx;
}
.images-box .box.dotted-box{
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 28rpx;
    color: #C8C8C8;
}
.images-box .box.dotted-box .upload-icon{
    width: 100rpx;
    height: 100rpx;
}