/* pages/product/product.wxss */
page {
    background-color: #F7F8FC;
}
.product{
    position: relative;
    background-color: white;
}
.input-wrapper{
    position: relative;
}
.input-wrapper .input{
    color: #7D7D7D;
    height: 120rpx;
    line-height: 120rpx;
    padding-left: 20rpx;
    font-size: 28rpx;
    border-bottom: 0.1px solid #E6E6E6;
}

.input-wrapper .editor{
    margin: 20rpx;
    font-size: 28rpx;
    height: 400rpx;
    display: block;
}
.input-wrapper .number{
    position: absolute;
    bottom: 20rpx;
    right: 20rpx;
    font-size: 28rpx;
    color: #C8C8C8;
}
.images-box{
    display: flex;
    flex-direction: row;
    flex-wrap:wrap;
    justify-content: flex-start;
    margin:0 20rpx;
}
.images-box .box{
    position: relative;
    margin:20rpx;
    width: 135rpx;
    height: 135rpx;
}
.icon-delete{
    position: absolute;
    right: -20rpx;
    top: -20rpx;
    width: 40rpx;
    height: 40rpx;
    z-index: 2;

}
.images-box .box .img{
    width: 135rpx;
    height: 135rpx;
}
.images-box .box.dotted-box{
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 28rpx;
    color: #C8C8C8;
}
.images-box .box.dotted-box .upload-icon{
    width: 100rpx;
    height: 100rpx;
}

.skill-type{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin: 20rpx;
    font-size: 28rpx;
    color: #C8C8C8;
    padding: 20rpx 0;
}

.shade {
    background-color: rgba(0, 0, 0, 0.5);
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    position: fixed;
}

.main {
    background-color: white;
    border-radius: 10px 10px 0 0;
    width: 100%;
    bottom: 0;
    position: absolute;
    display: flex;
    animation: main-show 0.25s forwards;
}

@keyframes main-show {
    0% {
        transform: translateY(100%);
    }

    100% {
        transform: translateY(0);
    }
}

.tree-select-title{
    margin: 20rpx;
    font-size: 32rpx;
}
.tree-select-box{
    height: 500rpx;
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;


}
.tree-select-box .tree-select-nav{
    overflow-y: auto;
    background-color: rebeccapurple;
    flex-grow:1;


}
.tree-select-box .tree-select-item{

    background-color: red;
    flex-grow:2;
    overflow-y: auto;

}