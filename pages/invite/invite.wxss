/* pages/invite/invite.wxss */
page {
    background-color: #F7F8FC;
}
.preview{
    position: relative;
    width: 100vw;
    text-align: center;
}
.preview .poster-bg{
    position: relative;
    width: 678rpx;
    z-index: 1;
}
.preview .shadow{
    position: absolute;
    bottom: -70rpx;
    left: 0;
    right: 0;
    width: 100%;
    margin: auto;
    z-index: 0;
}
.preview .scan{
    position: absolute;
    width: 160rpx;
    height: 160rpx;
    bottom: 40rpx;
    right: 100rpx;
    margin: auto;
    z-index: 3;
}
.title{
    position: relative;
    text-align:center;
    opacity: 0.9;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #0C2032;
    margin-top: 40rpx;

}
.share-box{
    margin-top: 40rpx;
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;  
}
.share-box .box{
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.share-box .box .icon{
    width: 100rpx;
    height: 100rpx;
}
.share-box .box .text{
    margin-top: 12.8rpx;
    opacity: 0.9;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #0C2032;
}
.share-box .box .btn{
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    opacity: 0;
    width: 100%;
    height: 100%;

}
.record{
    background-color: white;
    margin-left: 40rpx;
    margin-right: 40rpx;
    border-radius: 8rpx;
    margin-bottom: 40rpx;
}
.record .title{
    position: relative;
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    color: #0C2032;
    padding-top: 32rpx;
    margin-left:32rpx ;
    text-align: left;
}
.record .box{
    margin-top: 24rpx;
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;  
    padding-bottom: 40rpx;
}
.record .box .item{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 33%;
}
.record .box .item .top{
    font-family: DINAlternate-Bold;
    
    color: #FFBA20;
}
.record .box .item .top .value{
    font-size: 48rpx;
}
.record .box .item .top .unit{
    font-size: 20rpx;
}
.record .box .item .bottom{
    opacity: 0.5;
    margin-top: 10rpx;
    font-family: PingFangSC-Regular;
    font-size: 20rpx;
    color: #0C2032;
}