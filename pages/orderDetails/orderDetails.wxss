.shade {
    background-color: rgba(0, 0, 0, 0.5);
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    position: fixed;
}

.main {
    background-color: white;
    border-radius: 10px 10px 0 0;
    width: 100%;
    bottom: 0;
    position: absolute;
    animation: main-show 0.25s forwards;
}

@keyframes main-show {
    0% {
        transform: translateY(100%);
    }

    100% {
        transform: translateY(0);
    }
}
.main .shade-made{
    position: relative;
    margin:20rpx;
}

.main .shade-made .upload-title{
    font-size: 38rpx;
    font-weight: bold;
}
.main .shade-nopass{
    position: relative;
    margin:20rpx;
}
.main .shade-nopass .nopass-title{
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}
.main .shade-nopass .nopass-title .warning{
    width: 50rpx;
    height: 50rpx;
}
.main .shade-nopass .nopass-title .name{
  font-size: 38rpx;
  font-weight: bold;
}

.main .shade-checked{
    position: relative;
    margin:20rpx;
}

.input-wrapper {
