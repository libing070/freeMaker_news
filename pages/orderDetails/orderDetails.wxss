}
.task{
    position: relative;
    margin: 60rpx 20rpx 20rpx 20rpx;
}
.task .title{
    color: #000000;
    font-weight: bold;
    font-size: 34rpx;
    margin-bottom: 20rpx;
}
.task .tag{
    background-color: #e6e6e6;
    font-size: 28rpx;
    text-align: center;
    height: 40rpx;
    display: inline-block;
    padding:5rpx 10rpx;
    min-width: 100rpx;
    line-height: 40rpx;
    border-radius: 5px;
}
.task .content{
    margin-top: 10rpx;
    color: #7D7D7D;
    font-size: 28rpx;
}
.dates {
    position: relative;
    margin: 60rpx 20rpx 20rpx 20rpx;
}
.dates .title{
    color: #000000;
    font-weight: bold;
    font-size: 34rpx;
    margin-bottom: 20rpx;
}
.dates .date{
    margin-top: 10rpx;
    font-size: 28rpx;

}
.dates .date .date-left{
    float: left;
