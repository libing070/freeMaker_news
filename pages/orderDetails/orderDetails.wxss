/* pages/orderDetails/orderDetails.wxss */
page {
    background-color: white;
}
.order-status{
    position: relative;
    padding: 40rpx 20rpx;
    background-color: #e6e6e6;
}
.order-status .status{
    color: #000000;
    font-weight: bold;
    font-size: 34rpx;
}
.order-status .desc{
    font-size: 28rpx;
    margin-top:10rpx;
}

.order-status .uu{
    position: absolute;
    top: 0;
    bottom: 0;
    right: 40rpx;
    margin:auto;
    width: 250rpx;
    height: 200rpx;
}
.order-status .uu .earth{
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    margin:auto;
    width: 150rpx;
    height: 150rpx;
}
.order-steps{
    position: relative;
    padding: 40rpx 20rpx;
    background-color: #e6e6e6;
}
.steps{
    position: relative;
    margin-top: 20rpx;
    display: flex;
    width:90vw ;
    margin:auto;
    flex-direction: row;
    justify-content: space-between;
}
.steps .step-line{
    position: absolute;
    top: 30rpx;
    left: 0;
    right: 0;
    margin:auto;
    height: 2rpx;
    width: 90%;
    background-color: #7D7D7D;
}
.steps .step{
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

}
.steps .step .step-item{
    position: relative;
    width: 60rpx;
    height: 60rpx;
    border-radius: 100%;
    background-color: #cdcdcd;

}
.steps .step .step-item .status-icon{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin:auto;
}
.steps .step .step-title{
    margin-top: 8rpx;
    font-size: 22rpx;
    text-align: center;
}
.titles{
    margin-top: 20rpx;
    padding-left:20rpx ;
    color: #000000;
    font-size: 36rpx;
    font-weight: bold;
}
.price{
    color: tomato;
    margin-top: 20rpx;
    padding-left:20rpx;

}
.price .unit{
    font-size: 24rpx;
    font-weight: bold;
}
.price .value{
    font-size: 38rpx;
    font-weight: bold;
}
.user{
    position: relative;
    margin: 60rpx 20rpx 20rpx 20rpx;

}
.user .tag{
    color: #000000;
    font-weight: bold;
    font-size: 34rpx;
    margin-bottom: 20rpx;
}
.user .user-box{
    position: relative;
    border: 0.1px solid #E6E6E6;
    height: 80px;
    width: 100%;
}
.user .user-box .head{
    width: 100rpx;
    height: 100rpx;
