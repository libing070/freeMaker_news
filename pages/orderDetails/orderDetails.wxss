    bottom: 0;
    margin:auto;
}
.user .user-box .phone{
    position: absolute;
    left: 130rpx;
    font-size: 32rpx;
    top: 0;
    bottom: 0;
    margin:auto;
    height: 32rpx;
    line-height: 32rpx;
}
.user .user-box .concat{
    position: absolute;
    right: 20rpx;
    top: 0;
    bottom: 0;
    margin:auto;
    height: 60rpx;
    line-height: 60rpx;
    width: 150rpx;
    color: #7D7D7D;
    border: 0.1px solid #7D7D7D;
    text-align: center;
