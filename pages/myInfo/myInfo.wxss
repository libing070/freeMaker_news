.tool-bar{
    position: fixed;
    bottom: 0;
    box-shadow: inset 0 1px 0 0 #F0F0F0;
    background-color: white;
    height: 112rpx;
    width: 100vw;
    left: 0;
    right: 0;
    margin:auto;
    display: flex;
    flex-direction: row;
}
.tool-bar .layout-1{
    height: 88rpx;
    line-height: 88rpx;
    background: #F4F4F4;
    border-radius: 8rpx;
    text-align: center;
    flex-grow: 1;
    margin:auto 40rpx;
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: rgba(12,32,50, 0.2);
    text-align: center;
}
.tool-bar .layout-1.ok{
    background:#FFBA20;
    color: #FFFFFF;
}

.shade {
    background-color: rgba(0, 0, 0, 0.5);
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    position: fixed;
    z-index: 10000;
}

.main {
    background-color: white;
    border-radius: 10px 10px 0 0;
    width: 100%;
    bottom: 0;
    position: absolute;
    animation: main-show 0.25s forwards;
}

@keyframes main-show {
    0% {
        transform: translateY(100%);
    }

    100% {
        transform: translateY(0);
    }
}
.main .dialog-mask{
    position: relative;
}
.main .dialog-mask .title{

    margin-top: 114rpx;
    margin-left: 40rpx;
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    color: #0D1335;
}
.main .dialog-mask .desc{
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #8392A0;
    margin-top: 24rpx;
    margin-left: 40rpx;
}