/* pages/myInfo/myInfo.wxss */
page {
    background-color: #F7F8FC;
}
.my-info{
    position: relative;
    width: 100vw;

}
.basic{
    margin-top: 40rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
    background-color: white;
    border-radius: 8rpx;
}
.basic .item{
    position: relative;
    margin: 0 32rpx;
    border-bottom: 1rpx solid #E6E6E6;
    height:120rpx;
}
.basic .item.head{
    height: 144rpx;
}

.basic .item.head .avatar{
    top: 0;
    bottom: 0;
    right: 60rpx;
    margin: auto;
    position: absolute;
    background: rgba(144,157,170,0.22);
    border-radius: 100%;
    width: 100rpx;
    height: 100rpx;
}
.basic .item.head .avatar .img{
    border: 4rpx solid #FFBA20;
    width: 100%;
    height: 100%;
    border-radius: 100%;
}
.basic .item.head .icon{
    top: 0;
    bottom: 0;
    right:0;
    margin: auto;
    position: absolute;
    height: 30rpx;
    width: 30rpx;
    padding-left: 40rpx;
}
.basic .item .title{
    font-weight: bold;
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    width: 180rpx;
    height: 120rpx;
    line-height: 120rpx;
    font-family: PingFangSC-Medium;
    font-size: 32rpx;
    color: #0C2032;
}
.basic .item .input{
    top: 0;
    bottom: 0;
    right: 60rpx;
    margin: auto;
    position: absolute;
    text-align: right;
    color: #8392A0
}

.basic .item .icon{
    top: 0;
    bottom: 0;
    right:0;
    margin: auto;
    position: absolute;
    height: 40rpx;
    width: 40rpx;
    padding-left: 40rpx;
}
.employerInfo .item .dialog,
.basic .item  .dialog{
    width: calc( 100% - 180rpx);
    position: relative;
    z-index: 8;
    height: 120rpx;
    margin-left: 180rpx;
}
.basic .item-desc{
    position: relative;
    margin: 0 32rpx;
}
.basic .item-desc .top{
    height: 40rpx;
    margin-top: 32rpx;
    position: relative;
    padding-bottom: 30rpx;
}
.basic .item-desc .top .title{
    font-weight: bold;
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    width: 180rpx;
    height: 120rpx;
    line-height: 120rpx;
    font-family: PingFangSC-Medium;
    font-size: 32rpx;
    color: #0C2032;
}
.basic .item-desc .top .icon{
    top: 0;
    bottom: 0;
    right:0;
    margin: auto;
    position: absolute;
    height: 40rpx;
    width: 40rpx;
}
.basic .item-desc .textarea{
    width: 100%;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #8392A0;
    padding-bottom: 56rpx;
}
.basic .item-desc .textarea textarea{
    width: 100%;
}


