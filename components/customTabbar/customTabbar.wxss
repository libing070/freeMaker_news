.tabbar-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 20rpx;
    color: #7d7d7d;
    height: 112rpx;
}

.tabbar-item .image-box{
    width: 56rpx;
    height: 56rpx;
    background-color: rgba(255,0,0,0.08);
    margin-top: 20rpx; 
    margin-bottom: 4rpx;
    position: relative;

}
.tabbar-item .image-box image {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 36rpx;
    height: 36rpx;
}
.publish{
    position: absolute;
    left: 0;
    right: 0;
    top: 24rpx;
    margin:auto;
    width: 100rpx;
    height: 64rpx;
    border-radius: 36rpx;
    background-color: rgba(255,186,32,1);
}
.publish .add{
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    height: 40rpx;
    width: 40rpx;
}
