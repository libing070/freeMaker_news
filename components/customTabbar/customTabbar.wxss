.shade {
    background-color: rgba(0, 0, 0, 0.5);
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    position: fixed;
    z-index: 999;
}

.main {
    background-color: white;
    border-radius: 10px 10px 0 0;
    width: 100%;
    bottom: 0;
    position: absolute;
    animation: main-show 0.25s forwards;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

@keyframes main-show {
    0% {
        transform: translateY(100%);
    }

    100% {
        transform: translateY(0);
    }
}

.shade .main .box{
    position: relative;
    width: 50%;

}
.shade .main .box .b{
    position: relative;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin:112rpx 0;
}
.shade .main .box .b .icon{
    width: 140rpx;
    height: 140rpx;
}
.shade .main .box .b .name{
    margin-top: 16rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #0C2032;
}