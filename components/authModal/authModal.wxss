/* pages/loginPages/authModal/authModal.wxss */

.shade {
    background-color: rgba(0, 0, 0, 0.5);
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 100;
}

.back {
    background-color: white;
    border-radius: 5px;
    width: 315px;
    padding-top: 24px;
}

.title {
    color: #323232;
    font-size: 17px;
    font-weight: 500;
    text-align: center;
}

.content {
    color: #646464;
    font-size: 15px;
    text-align: center;
    margin-top: 12px;
}

.buttons {
    box-shadow: 0 -1px 0 0 #E6E6E6;
    margin-top: 24px;
    overflow: hidden;
}

.buttons .cancel {
    color: #646464;
    font-size: 16px;
    width: 157px;
    height: 47px;
    float: left;
    display: flex;
    align-items: center;
    justify-content: center;
}

.buttons .confirm {
    color: #FFBA20;
    font-weight: 500;
    box-shadow: inset 1px 0 0 0 #E6E6E6;
    width: 158px;
    position: relative;
}